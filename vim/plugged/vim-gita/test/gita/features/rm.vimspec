Describe gita#features#rm
  Before
    Init
    let gita = gita#get()
    let gita.operations._previous_args = []
    function! gita.operations.rm(...) abort
      call add(self._previous_args, a:000)
    endfunction
  End

  Context #exec([{options}, {config}])
    It should call 'gita.operations.rm' internally
      call gita#features#rm#exec({
            \ 'q': 1, 'quiet': 1,
            \ 'f': 1, 'force': 1,
            \ 'r': 1, 'recursive': 1,
            \ 'cached': 1,
            \})
      Assert Equals(gita.operations._previous_args, [[{
            \ 'q': 1, 'quiet': 1,
            \ 'f': 1, 'force': 1,
            \ 'r': 1, 'recursive': 1,
            \ 'cached': 1,
            \}, {}]])
    End

    It should remove unknown options internally
      call gita#features#rm#exec({
            \ 'unknown_option': 1,
            \})
      Assert Equals(gita.operations._previous_args, [[{}, {}]])
    End
  End

  Context #command({bang}, {range}[, {cmdline}])
    It should automatically specify 'quiet = 1'
      let g:gita#features#rm#default_options = {}
      call gita#features#rm#command('', [0, 0], '-- %')
      " Note: git rm requires UNIX path
      Assert Equals(gita.operations._previous_args, [[{
            \ '--': gita#utils#path#unix_abspath(['%']),
            \ 'quiet': 1,
            \}, { 'echo': 'both' }]])
    End
    It should automatically expand '%' to absolute path
      let g:gita#features#rm#default_options = {}
      call gita#features#rm#command('', [0, 0], '-- %')
      " Note: git rm requires UNIX path
      Assert Equals(gita.operations._previous_args, [[{
            \ '--': gita#utils#path#unix_abspath(['%']),
            \ 'quiet': 1,
            \}, { 'echo': 'both' }]])
    End
    It should automatically add the absolute path of the current buffer
      let g:gita#features#rm#default_options = {}
      call gita#features#rm#command('', [0, 0], '')
      " Note: git rm requires UNIX path
      Assert Equals(gita.operations._previous_args, [[{
            \ '--': gita#utils#path#unix_abspath(['%']),
            \ 'quiet': 1,
            \}, { 'echo': 'both' }]])
    End
    It should automatically add default options
      let g:gita#features#rm#default_options = {
            \ 'quiet': 1,
            \ 'force': 1,
            \ 'cached': 1,
            \}
      call gita#features#rm#command('', [0, 0])
      " Note: git rm requires UNIX path
      Assert Equals(gita.operations._previous_args, [[{
            \ '--': gita#utils#path#unix_abspath(['%']),
            \ 'quiet': 1,
            \ 'force': 1,
            \ 'cached': 1,
            \}, { 'echo': 'both' }]])
    End
  End

  Context #complete({arglead}, {cmdline}, {cursorpos})
    It should call ArgumentParser.complete function
      Assert True(exists('*gita#features#rm#complete'))
    End
  End
End
